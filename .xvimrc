set hlsearch
set incsearch

" Case-insensitive searching.
set ignorecase

" But case-sensitive if expression contains a capital letter.
set smartcase

" Default to global substitutions on lines
set gdefault

set number

nmap ,fc :%s/^\s+$//ge<CR>
nmap ,hs :set hlsearch!<CR>

nmap ,cc :xccmd commentAndUncommentCurrentLines<CR>
nmap ,cu :xccmd commentAndUncommentCurrentLines<CR>

noremap <C-p> :xccmd openQuickly<CR>

nmap ,> :nissue<CR>
nmap ,< :pissue<CR>
