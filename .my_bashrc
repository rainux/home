    alias gvim='open -a MacVim'
    alias ls='ls -GFh'
    alias o='open'
else
    alias ls='ls --color -hF --show-control-chars'
    alias o='gnome-open'
    alias open='gnome-open'
fi
alias aga='ag -a'
alias be='bundle exec'
