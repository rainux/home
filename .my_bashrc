alias yaoupg='yaourt -Syu --aur --devel'
alias yaoin='yaourt -S'
alias yaoins='yaourt -Up'
alias yaore='yaourt -R'
alias yaorem='yaourt -Rns'
alias yaorep='yaourt -Si'
alias yaoreps='yaourt -Ss'
